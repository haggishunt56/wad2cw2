{{>template/head}}

    <section id="upcoming-goals">
        <p class="wellbeing-body">Welcome, {{user}}{{^user}}user{{/user}}!</p>
    </section>

    <section>
        <h2>Upcoming goals</h2>
            {{#goalsExist}}
                <table class="goals">
                    <thead>
                        <tr>
                            <th>Goal</th>
                            <th>Date added</th>
                            <th>Date due</th>
                        </tr>
                    </thead>
                    <tbody>
            {{/goalsExist}}

            {{#goals}}
                        <tr>
                            <td><a href="/goals/{{_id}}" class="">{{name}}</a></td>
                            <td>{{dateadded}}</td>
                            <td>{{#target}}{{.}}{{/target}}{{^target}}-{{/target}}</td>
                        </tr>
            {{/goals}}

            {{#goalsExist}}
                    </tbody>
                </table>
            {{/goalsExist}}
    </section>

    <section>
        What would you like to do today?
    </section>

    <section class="flex-container centre">
        <div class="flex-item">
            <a href="/goals">
                <div class="navbutton">
                    <p>View/amend goals</p>
                </div>
            </a>
        </div>
        <div class="flex-item centre">
            <a href="/goals/add">
                <div class="navbutton">
                    <p>Create a goal</p>
                </div>
            </a>
        </div>
        <div class="flex-item centre">
            <a href="/trophies/add-achievement">
                <div class="navbutton">
                    <p>Record an achievement</p>
                </div>
            </a>
        </div>
        <div class="flex-item">
            <a href="/trophies">
                <div class="navbutton">
                    <p>Trophies</p>
                </div>
            </a>
        </div>
        <div class="flex-item">
            <a href="/guides/fitness">
                <div class="navbutton">
                    <p>Fitness guide</p>
                </div>
            </a>
        </div>
        <div class="flex-item">
            <a href="/guides/lifestyle">
                <div class="navbutton">
                    <p>Lifestyle guide</p>
                </div>
            </a>
        </div>
        <div class="flex-item">
            <a href="/guides/nutrition">
                <div class="navbutton">
                    <p>Nutrition guide</p>
                </div>
            </a>
        </div>
    </section>

{{>template/foot}}
