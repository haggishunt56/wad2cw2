{{>template/head}}
    <form action="/register" method="post">
        <fieldset class="form-section">
            <label for="username">Username</label>
            <input id="username" name="username" type="text" placeholder="e.g. coolGuy_1992" required>
        </fieldset>
        <fieldset class="centre form-section">
            <label for="email">Email address</label>
            <input id="email" name="email" type="text" placeholder="coolguy_92@gmail.com" required>
        </fieldset>
        <fieldset class="form-section">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" minlength="8" required>
            <!-- todo: server side validation -->
        </fieldset>
        <fieldset class="form-section">
            <label for="password-confirm">Confirm password</label>
            <input id="password-confirm" name="password-confirm" type="password" required>
        </fieldset>
        <fieldset class="form-section">
            <input type="submit" value="Register" class="centre">
        </fieldset>
    </form>
{{>template/foot}}